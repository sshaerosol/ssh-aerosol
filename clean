#!/bin/bash

cd src
scons -c

rm -f `find -iname "*.bck"` 
rm -f `find -iname "*.o"`
rm -f `find -iname "*.os"`
rm -f `find -iname "ssh-aerosol-*"`
rm -f libssh-aerosol.so
rm -rf .scon*

cd ..

file="unifac.csv"
if [ -f $file ] 
then
    rm -f $file
fi


file="ssh-aerosol-cb05"
if [ -h $file ] 
then
    rm -f $file
fi

file="ssh-aerosol-cb05en"
if [ -h $file ] 
then
    rm -f $file
fi

file="ssh-aerosol"
if [ -h $file ] 
then
    rm -f $file
fi

file="namelist.out"
if [ -f $file ] 
then
    rm -f $file
fi

